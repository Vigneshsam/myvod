<h1>Videos Index</h1>

<p><%= show_first_unseen_button %></p>

<%= paginate @videos %>

<div class="row-fluid">
  <ul class="thumbnails">
    <%- @videos.each do |video| %>
      <li>
      <%= link_to image_tag(video.video.url(Video::INDEX_THUMBNAIL)), video_path(video.id), title: video.name %>
      </li>
    <%- end %>
  </ul>
</div>

<%= paginate @videos %>
